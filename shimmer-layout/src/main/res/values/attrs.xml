<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="shimmerLayoutStyle" format="reference" />
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmerBaseColor" format="color" />
        <attr name="shimmerHighlightColor" format="color" />
        <attr name="shimmerTilt" format="float" />
        <attr name="shimmerEnabled" format="boolean" />
        <attr name="shimmerGradientStart" format="float" />
        <attr name="shimmerGradientEnd" format="float" />
        <attr name="shimmerDuration" format="integer" />
        <attr name="shimmerXfermode" format="enum">
            <enum name="clear" value="0" />
            <enum name="src" value="1" />
            <enum name="dst" value="2" />
            <enum name="src_over" value="3" />
            <enum name="dst_over" value="4" />
            <enum name="src_in" value="5" />
            <enum name="dst_in" value="6" />
            <enum name="src_out" value="7" />
            <enum name="dst_out" value="8" />
            <enum name="src_atop" value="9" />
            <enum name="dst_atop" value="10" />
            <enum name="xor" value="11" />
            <enum name="add" value="12" />
            <enum name="multiply" value="13" />
            <enum name="screen" value="14" />
            <enum name="overlay" value="15" />
            <enum name="darken" value="16" />
            <enum name="lighten" value="17" />
        </attr>
    </declare-styleable>
</resources>